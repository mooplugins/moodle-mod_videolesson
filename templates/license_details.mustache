<div class="card mb-3">
    <div class="card-header bg-primary text-white">
        License Information
    </div>
    <div class="card-body">
        <div class="row mb-3">
            <div class="col-sm-4 font-weight-bold">License key:</div>
            <div class="col-sm-8" id="license-key">{{license_key}}</div>
        </div>
        <div class="row mb-3">
            <div class="col-sm-4 font-weight-bold">Status:</div>
            <div class="col-sm-8" id="license-status">{{#notactive}}{{#pix}}req, core, {{#str}} license:notactive, mod_videolesson {{/str}}{{/pix}}{{/notactive}}{{status}}</div>
        </div>
        <div class="row mb-3">
            <div class="col-sm-4 font-weight-bold">License to:</div>
            <div class="col-sm-8" id="license-to">{{first_name}} {{last_name}}</div>
        </div>
        <div class="row mb-3">
            <div class="col-sm-4 font-weight-bold">License type:</div>
            <div class="col-sm-8" id="license-type">{{type}}</div>
        </div>
        <div class="row mb-3">
            <div class="col-sm-4 font-weight-bold">Expiry:</div>
            <div class="col-sm-8" id="license-expiry">{{#expired}}{{#pix}}req, core, {{#str}} license:expired, mod_videolesson {{/str}}{{/pix}}{{/expired}}{{date_expiry}}</div>
        </div>
    </div>
</div>