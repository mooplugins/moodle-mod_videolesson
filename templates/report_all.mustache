<div class="card-group my-4">
    <div class="card">
        <div class="card-body">
            <div class="rounded-icon-container mb-2">
                <i class="fa fa-eye"></i>
            </div>
            <h5 class="card-title"><a href="{{{urls.impressions}}}">{{{impression}}}</a></h5>
            <p class="card-text">{{#str}}report:impressions, mod_videolesson{{/str}}</p>
        </div>
    </div>
    <div class="card">
        <div class="card-body">
            <div class="rounded-icon-container mb-2">
                <i class="fa fa-play"></i>
            </div>
            <h5 class="card-title"><a href="{{{urls.plays}}}">{{{totalplay}}}</a></h5>
            <p class="card-text">{{#str}}report:plays, mod_videolesson{{/str}}</p>
        </div>
    </div>
    <div class="card">
        <div class="card-body">
            <div class="rounded-icon-container mb-2">
                <i class="fa fa-user"></i>
            </div>
            <h5 class="card-title"><a href="{{{urls.unique}}}">{{{unique}}}</a></h5>
            <p class="card-text">{{#str}}report:unique, mod_videolesson{{/str}}</p>
        </div>
    </div>
    <div class="card">
        <div class="card-body">
            <div class="rounded-icon-container mb-2">
                <i class="fa fa-clock-o"></i>
            </div>
            <h5 class="card-title">{{{totaltime}}}</h5>
            <p class="card-text">{{#str}}report:totaltime, mod_videolesson{{/str}}</p>
        </div>
    </div>
    <div class="card">
        <div class="card-body">
            <div class="rounded-icon-container mb-2">
                <i class="fa fa-clock-o"></i>
            </div>
            <h5 class="card-title">{{{avgtimespent}}}</h5>
            <p class="card-text">{{#str}}report:avgtime, mod_videolesson{{/str}}</p>
        </div>
    </div>
    <div class="card">
        <div class="card-body">
            <div class="rounded-icon-container mb-2">
                <i class="fa fa-check-circle"></i>
            </div>
            <h5 class="card-title">{{{avgcompletion}}}</h5>
            <p class="card-text">{{#str}}report:avgcompletion, mod_videolesson{{/str}}</p>
        </div>
    </div>
</div>
